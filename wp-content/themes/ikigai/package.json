{
  "name": "ikigai",
  "version": "0.0.1",
  "description": "A perfect WP elite theme",
  "main": "index.js",
  "scripts": {
    "tw": "npx tailwind build \"./styles/tailwind.css\" -o \"./style.css\"",
    "sync": "browser-sync start --proxy \"localhost:8000\" --files \"*.php, *.css, ** /*.php\"",
    "start": "NODE_ENV=dev&&watch 'npm run tw' \"./styles\"&npm run sync",
    "build": "NODE_ENV=prod"
  },
